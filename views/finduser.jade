extends layout
block content
  div.container
    h1. 
      You can find a User
    hr.
    form.login-form.form-horizontal(method="get", action="find_a_user", roel="form")
      div.form-group
        label.col-sm-4 Username
        div.col-sm-8
          input.form-control(
            placeholder="Enter username"
            name="username"
          )
      div.form-group
        div.col-sm-offset-4.col-sm-8
          button.login.btn.btn-default(type="submit")= "Search"
